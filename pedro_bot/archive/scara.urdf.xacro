<?xml version="1.0"?>
<robot name="scara_adv">

<!-- simple two-axis scara robot -->

<material name="blue">
    <color rgba="0 0 1 1"/>
</material>

<material name="black">
    <color rgba="0 0 0 1"/>
</material>

<material name="white">
    <color rgba="1 1 1 1"/>
</material>

<!-- world link -->
<link name="world"/>

<!-- base_link and its fixed joint -->
<joint name="joint_fix" type="fixed">
  <parent link="world"/>
  <child link="base_link"/>
</joint>

<link name="base_link">
  

  <visual>
    <origin xyz="0 0 0.4" rpy="0 0 0"/>
    <geometry>
      <cylinder length="0.8" radius="0.1"/>
      
    </geometry>
    <material name="black"/>
  </visual>

  
</link>


<!-- the first arm of the scara, with revolute joint rotating along z axis -->
<!-- arm length between two rotation axis is 1 -->
 <!--Joint Link 1 --> 
<joint name="rev1" type="revolute">
  <parent link="base_link"/>
  <child link="arm1"/>
  <origin xyz="0 0 0.8" rpy="0 0 0"/>
  <axis xyz="0 0 1"/>
  <limit effort="1000" velocity="1000" lower="-1" upper="1"/>
</joint>

<link name="arm1">
  

  <visual>
    <origin xyz="0.0 -0.5 0" rpy="0 0 0"/>
    <geometry>
      <box size="0.1 1 0.1"/>
    </geometry>
    <material name="white"/>
  </visual>

 <!--Joint Link 2 --> 
</link>


<joint name="rev2" type="revolute">
  <parent link="arm1"/>
  <child link="arm2"/>
  <origin xyz="0 -1 0" rpy="0 0 0"/>
  <axis xyz="0 0 1"/>
  <limit effort="1000" velocity="1000" lower="-1" upper="1"/>
</joint>

<link name="arm2">
  

  <visual>
    <origin xyz="0.0 -0.25 0" rpy="0 0 0"/>
    <geometry>
      <box size="0.1 0.5 0.1"/>
    </geometry>
    <material name="blue"/>
  </visual>

  
</link>
<!--gazebo reference="arm1"-->
  <!--material>Gazebo/Grey</material-->
<!--/gazebo-->





</robot>
