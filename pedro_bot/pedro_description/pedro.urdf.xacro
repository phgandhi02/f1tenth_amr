    <!-- the front left wheel -->
    <joint name="FL_hinge" type="continuous">
        <origin rpy="0 0 0" xyz="0 ${front_wheel_xgap} 0"/>
        <axis xyz="0 1 0"/>
        <parent link="front_left_bar_link"/>
        <child link="FL_wheel"/>
        
    </joint>

    <!-- the front right wheel -->
    <joint name="FR_hinge" type="continuous">
        <origin rpy="0 0 0" xyz="0 ${-front_wheel_xgap} 0"/>
        <axis xyz="0 1 0"/>
        <parent link="front_right_bar_link"/>
        <child link="FR_wheel"/>
    </joint>

    <joint name="BL_hinge" type="continuous">
        <origin xyz="-${wheel_xgap} ${wheel_ygap} ${wheel_zoff}" rpy="0 0 0"/>
        <child link="BL_wheel"/>
        <parent link="chassis"/>
        <axis xyz="0 1 0"/>
    </joint>

    <joint name="BR_hinge" type="continuous">
        <origin xyz="-${wheel_xgap} -${wheel_ygap} ${wheel_zoff}" rpy="0 0 0"/>
        <child link="BR_wheel"/>
        <parent link="chassis"/>
        <axis xyz="0 1 0"/>
    </joint>

    <link name="FR_wheel">
        <xacro:cylinder_inertial radius="${wheel_radius}" length="${wheel_width}" mass="${wheel_mass}">
            <origin xyz="${wheel_xgap} ${wheel_ygap} ${wheel_zoff}" rpy="0 ${PI/2} ${PI/2}"/>
        </xacro:cylinder_inertial>
        <collision>
            <origin xyz="0 0 0" rpy="0 ${PI/2} ${PI/2}"/>
            <geometry>
                <cylinder radius="${wheel_radius}" length="${wheel_width}"/>
            </geometry>
        </collision>
        <visual>
            <origin xyz="0 0 0" rpy="0 ${PI/2} ${PI/2}"/>
            <geometry>
                <cylinder radius="${wheel_radius}" length="${wheel_width}"/>
            </geometry>
            <material name="blue"/>
        </visual>
    </link>

    <link name="FL_wheel">
        <xacro:cylinder_inertial radius="${wheel_radius}" length="${wheel_width}" mass="${wheel_mass}">
            <origin xyz="0 0 0" rpy="0 ${PI/2} ${PI/2}"/>
        </xacro:cylinder_inertial>
        <collision>
            <origin xyz="0 0 0" rpy="0 ${PI/2} ${PI/2}"/>
            <geometry>
                <cylinder radius="${wheel_radius}" length="${wheel_width}"/>
            </geometry>
        </collision>
        <visual>
            <origin xyz="0 0 0" rpy="0 ${PI/2} ${PI/2}"/>
            <geometry>
                <cylinder radius="${wheel_radius}" length="${wheel_width}"/>
            </geometry>
            <material name="blue"/>
        </visual>
    </link>

    <link name="BL_wheel">
        <xacro:cylinder_inertial radius="${wheel_radius}" length="${wheel_width}" mass="${wheel_mass}">
            <origin xyz="0 0 0" rpy="0 ${PI/2} ${PI/2}"/>
        </xacro:cylinder_inertial>
        <collision>
            <origin xyz="0 0 0" rpy="0 ${PI/2} ${PI/2}"/>
            <geometry>
                <cylinder radius="${wheel_radius}" length="${wheel_width}"/>
            </geometry>
        </collision>
        <visual>
            <origin xyz="0 0 0" rpy="0 ${PI/2} ${PI/2}"/>
            <geometry>
                <cylinder radius="${wheel_radius}" length="${wheel_width}"/>
            </geometry>
            <material name="orange"/>
        </visual>
    </link>

    <link name="BR_wheel">
        <xacro:cylinder_inertial radius="${wheel_radius}" length="${wheel_width}" mass="${wheel_mass}">
            <origin xyz="0 0 0" rpy="0 ${PI/2} ${PI/2}"/>
        </xacro:cylinder_inertial>
        <collision>
            <origin xyz="0 0 0" rpy="0 ${PI/2} ${PI/2}"/>
            <geometry>
                <cylinder radius="${wheel_radius}" length="${wheel_width}"/>
            </geometry>
        </collision>
        <visual>
            <origin xyz="0 0 0" rpy="0 ${PI/2} ${PI/2}"/>
            <geometry>
                <cylinder radius="${wheel_radius}" length="${wheel_width}"/>
            </geometry>
            <material name="orange"/>
        </visual>
    </link>

